<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
	<data-sources />
	<form-beans>
		<form-bean name="userForm" type="cn.thepetshop.form.UserForm" />
    <form-bean name="modAdminPassForm" type="cn.thepetshop.form.ModAdminPassForm" />
	
	</form-beans>

	<global-exceptions />
	<global-forwards />
	<action-mappings>
		<action path="/pay" type="cn.thepetshop.action.PayAction" validate="false">
			<forward name="paySucceed" path="/paySucceed.jsp"></forward>
			<forward name="payfailed" path="/payFailed.jsp"></forward>
		</action>
		
		<action path="/sure" type="cn.thepetshop.action.SureAction" validate="false">
			<forward name="sure" path="/trading.do"></forward>
		</action>
		
		<action path="/evalute" type="cn.thepetshop.action.EvaluteAction" validate="false">
			<forward name="evalute" path="/trading.do"></forward>
		</action>
		
		<action path="/delete" type="cn.thepetshop.action.DeleteAction" validate="false">
			<forward name="deleteSucceed" path="/trading.do"></forward>
		</action>
	
		<action path="/history" type="cn.thepetshop.action.OrderShowAction" validate="false">
			<forward name="show" path="/orderShow.jsp"></forward>
		</action>
		
		<action path="/trading" type="cn.thepetshop.action.NewOrderShowAction" validate="false">
			<forward name="show1" path="/newOrderShow.jsp"></forward>
		</action>
		
		<action path="/index" type="org.apache.struts.actions.ForwardAction"
			parameter="IndexViewUnLogin"></action>

		<action path="/register" type="cn.thepetshop.action.RegistAction"
			name="userForm" validate="false">
		</action>
		<action path="/login" type="cn.thepetshop.action.LoginAction"
			name="userForm" validate="false">
		</action>
		<action path="/getUserMsgAction" type="cn.thepetshop.action.GetUserMsgAction"
			name="userForm" validate="false">
		</action>
		<action path="/updateUserPass" type="cn.thepetshop.action.UpdateUserPassAction"
			name="userForm" validate="false">
		</action>
		<action path="/unfinishedOrders" type="cn.thepetshop.action.UnfinishedOrdersAction"
			validate="false">
			<set-property property="cancellable" value="true" />
		</action>
    <action
      attribute="modAdminPassForm"
      input="/admin/modAdminPass.jsp"
      name="modAdminPassForm"
      path="/modAdminPass"
      scope="request"
      type="cn.thepetshop.action.ModAdminPassAction">
      <set-property property="cancellable" value="true" />
    </action>
	

	</action-mappings>
	<message-resources parameter="ApplicationResources" />

	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config" value="/WEB-INF/tiles-definition.xml" />
		<set-property property="definitions-parser-validate"
			value="true" />
	</plug-in>

</struts-config>